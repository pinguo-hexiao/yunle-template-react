{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules",
    "src",
    "test"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "server.js",
    "router/*",
    "webpack.config.js",
    "webpack/*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}